{
  "compilerOptions": {
    "target": "es2019",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "noEmit": true,
    "typeRoots": [
      "typings",
      "test/typings",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "./node_modules",
    "./src",
    "./lib",
    "./build"
  ],
}
